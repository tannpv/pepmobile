<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" method="upgrade" client="site">
	<name>Bizkniz Facebook Feed Display</name>
	<author>xing</author>
	<creationDate>16-Oct-2011</creationDate>
	<copyright>Copyright (C) 2005 - 2008 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@autson.com</authorEmail>
	<authorUrl>www.autson.com</authorUrl>
	<version>1.0.0</version>
	<description>
		 <![CDATA[
		 Bizkniz Facebook Feed Display for Joomla 2.5 
		<br/>
		<p>
		]]>
	</description>
	<files>
		<filename module="mod_bizkniz_facebook_feed_display">mod_bizkniz_facebook_feed_display.php</filename>
		<filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
		<folder>images</folder>
		<folder>elements</folder>
		<folder>css</folder>
		<folder>js</folder>
	</files>
	
	<config>
		<fields name="params" addpath="/modules/mod_bizkniz_facebook_feed_display/elements">
			<fieldset name="basic">
			   	<field type="spacer" name="&lt;div style=&quot;color:#fff; font-size:12px; font-weight:bold; padding:3px; margin:0; text-align:center; background:#333333;&quot;&gt;Settings&lt;/div&gt;" />
			
				<field name="moduleclass_sfx" type="text" default="" label="Class:" description="specify class to apply" />
					<field name="channel_id" type="text" default="19292868552" label="Channel ID" description="" />
						<field name="baseurl" type="text" default="" label="Channel URL Link" description="Your channel URL Link" size="50" />
						<field name="stream" type="list" default="yes" label="Show Stream" description="">
			
						<option value="1">YES</option>
			
						<option value="0">NO</option>
			
					</field>
			    <field name="connections" type="text" default="25" label="Number of Connections" description="Total number of connections" />
			
				<field name="apikey" type="text" default="" label="Facebook API Key" description="Facebook API Key" />

				<field type="spacer" name="&lt;div style=&quot;color:#fff; font-size:12px; font-weight:bold; padding:3px; margin:0; text-align:center; background:#333333;&quot;&gt;Dimensions&lt;/div&gt;" />
			
					<field name="width" type="text" default="300" label="Width" description="" />
					<field name="height" type="text" default="600" label="Height" description="" />
			
			
				<field type="spacer" name="&lt;div style=&quot;color:#fff; font-size:12px; font-weight:bold; padding:3px; margin:0; text-align:center; background:#333333;&quot;&gt;Module Appearance&lt;/div&gt;" />
		
					<field name="cont_background" type="color" default="#D2E0EA" label="Container Background" description="" />
		
				<field name="border_color" type="color" default="#899CAA" label="Container Border" description="" />
		
				
		<field type="spacer" name="&lt;div style=&quot;color:#fff; font-size:12px; font-weight:bold; padding:3px; margin:0; text-align:center; background:#333333;&quot;&gt;Jquery&lt;/div&gt;" />
		
		 <field name="show_jquery" type="radio" default="yes" label="Include Jquery" description="">
			
			<option value="yes">Yes</option>
			<option value="no">No</option>
		</field>
	</fieldset>
  </fields>
</config>


</extension>

<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="search">
	<name>Search - TorTags</name>
	<author>Tormix</author>
	<creationDate>October 2011</creationDate>
	<copyright>Copyright (C) 2005 - 2011 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>support@tormix.com</authorEmail>
	<authorUrl>www.tormix.com</authorUrl>
	<description>Search plugin: TorTags</description>
	<version>1.0</version>
	<files>
		<filename plugin="tortags">tortags.php</filename>
		<filename>index.html</filename>
	</files>
     	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_search_tortags.ini</language>
	</languages> 
	  <config>
	  	<fields name="params">

			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="50"
					description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
					label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
					size="5"
				/>
				<field name="nav" type="list"	default="2"	
				label="Show results"	size="1">
					<option value="1">in new window</option>
					<option value="2">in self window</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>